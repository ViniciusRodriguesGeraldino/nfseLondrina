{% extends 'base.html.twig' %}

{% block body %}

    <link href="{{ asset('assets/css/nfse_bootstrap.min.css') }}" rel="stylesheet" type="text/css"
          xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html"/>
    <link href="{{ asset('assets/css/nfse.css') }}" rel="stylesheet" type="text/css"/>

    <form method="post" action="" id="ajax_form">

        <div class="flat-theme">

            <div class="row vertical-offset5">
                <div class="col-xs-3 col-xs-offset-1">
				<span class="sale-number">Nota Fiscal Serviço
                    <small>
						<input type="hidden" name="numeroVenda">1</input>
					</small>
				</span>
                </div>
                <div class="col-xs-3">
				{#<span class="sale-total"><small>R$</small>#}
					  {#<input type="hidden" id="tipoDesconto" name="tipoDesconto"> 0,00 </input>#}
				{#</span>#}
                </div>
            </div>

            <div class="row">
                <div class="row-divider dotted col-xs-10 vertical-offset3 col-xs-offset-1"></div>
            </div>

            <div class="row">

                <div class="col-xs-offset-1 col-xs-3">
                    <div class="float-left no-padding-left col-xs-4">
                        <label>Cliente</label>
                    </div>
                    <div class="float-right text-right col-xs-8">
                        <a href="" class="customer-edit-link">
                            Perfil do cliente
                        </a>
                    </div>
                    {#<input type="text" style="display:none" id="idCliente" name="idCliente">#}

                    <input type="text" required="required" placeholder="Digite o nome do cliente"
                           id="NomeCliente" name="NomeCliente" onchange="" class="NomeCliente">
                </div>

                <div class="col-xs-1">
                    <label>Número</label>
                    <input type="text" required="required" maxlength="9" value="{{ formValues.numeroNota }}"
                           id="numeroNota"
                           name="numeroNota" class="text-right validate col-xs-1">
                </div>

                <div class="col-xs-2 fix-padding">
                    <label>Data da venda</label>
                    <div class="input-append date" id="datetimepicker1">
                        <input type="text" id="dataNota" name="dataNota" value="{{ formValues.data }}"
                                data-format="dd/MM/yyyy" required="required" placeholder="DD/MM/AAAA">
                        <span class="add-on">
                            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
                        </span>
                    </div>
                </div>
            </div>

            <div class="row" style="display: none">
                <div class="col-xs-offset-1 col-xs-3">
                    <label>Vendedor Responsável</label>
                    <select class="" name="vendedor" id="vendedor">
                        <option value="" selected="selected" class="">&nbsp;</option>
                        <option value="0">Carregando...</option>
                    </select>
                </div>

                <div class="col-xs-1">
                    <label>Cfop</label>
                    <select class="" name="vendedor" id="vendedor">
                        <option value="" selected="selected" class="">&nbsp;</option>
                        <option value="0">Carregando...</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-10 col-xs-offset-1">
                    <label>Itens</label>
                </div>
            </div>

            <!--Tabela de Produtos-->
            <div class="">
                <div class="row">
                    <div class="col-xs-10 col-xs-offset-1">
                        <table class="table-flat deleteable" id="tabelaprodutos">
                            <thead>
                                <tr>
                                    <th><div class="text-right">Produto/Serviço</div></th>
                                    <th><div class="text-right">Detalhes do Item</div></th>
                                    <th><div class="text-right">Quantidade</div></th>
                                    <th><div class="text-right">Valor</div></th>
                                    <th><div class="text-right">Desconto</div></th>
                                    <th><div class="text-right">ISS</div></th>
                                    <th><div class="text-right">%ISS</div></th>
                                    <th><div class="text-right">Subtotal</div></th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                            <tr>
                                <td><input type="text" id="idServico0" name="idServico0" class="col6 ServicoItem"></td>
                                <td><input type="text" id="DescricaoItem0" name="DescricaoItem0" class="col6"></td>
                                <td><input type="text" id="ItemQtd0" name="ItemQtd0" class="col6 text-right Totals"></td>
                                <td><input type="text" id="ItemPreco0" name="ItemPreco0" class="col5 text-right Totals"></td>
                                <td><input type="text" id="ItemDesconto0" name="ItemDescontol0" class="col5 text-right Totals"></td>
                                <td><input type="text" id="ItemISS0" name="ItemISS0" class="col5 text-right Totals"></td>
                                <td><input type="text" id="ItemPercIss0" name="ItemPercIss0" class="col5 text-right Totals"></td>
                                <td><input type="text" id="ItemTotal0" name="ItemTotal0" class="col5 text-right SubTotals"></td>
                                <td href="#" id="btnRemoveLinha" class="sale-delete-row">×</td>
                            </tr>
                            </tbody>

                        </table>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-xs-offset-1 vertical-offset3">

                            <div class="col-xs-3">
                                <a id="" href="#" onclick="inserirLinhaTabela()" class="flat-btn">
                                    <span class="halflings plus"><i></i></span>
                                    Adicionar mais uma linha
                                </a>
                            </div>

                            <div class="col-xs-2 text-right">
                                <span></span>
                            </div>

                            {#<div class="col-xs-1">#}
                                {#Desconto#}
                            {#</div>#}
                            {#<div class="col-xs-1">#}
                                {#<select class="col-xs-1" style="width: 60px;">#}
                                    {#<option value="0">%</option>#}
                                    {#<option value="1" selected="selected">R$</option>#}
                                {#</select>#}
                            {#</div>#}
                            {#<div class="col-xs-1 text-right fix-padding-more">#}
                                {#<input type="text" class="text-right" id="valorDesconto" currency="" name="valorDesconto"#}
                                       {#default-zero="true" value="0.00">#}
                            {#</div>#}


                            <div class="col-xs-2 text-right">
                                <span></span>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="table">

                {#Desconto#}
                <div class="col-xs-offset-1 col-xs-10">
                    <div class="row vertical-offset3">
                        <div class="col-xs-1" style="text-decoration: underline">Retenções:</div>
                        <div class="col-xs-1">ISS:</div>
                        <div class="col-xs-1"><input type="text" id="iss" name="iss" value="0.00"></div>
                        <div class="col-xs-1">CSL:</div>
                        <div class="col-xs-1"><input type="text" id="csl" name="csl" value="0.00"></div>
                        <div class="col-xs-1">PIS:</div>
                        <div class="col-xs-1"><input type="text" id="pis" name="pis" value="0.00"></div>
                        <div class="col-xs-1">IRRF:</div>
                        <div class="col-xs-1"><input type="text" id="irrf" name="irrf" value="0.00"></div>
                    </div>
                </div>


                <div class="col-xs-offset-1 col-xs-10">
                    <div class="row vertical-offset3">
                        <div class="col-xs-1"></div>
                        <div class="col-xs-1">COFINS:</div>
                        <div class="col-xs-1"><input type="text" id="cofins" name="cofins" value="0.00"></div>
                        <div class="col-xs-1">INSS:</div>
                        <div class="col-xs-1"><input type="text" id="inss" name="inss" value="0.00"></div>
                        <div class="col-xs-1">Base Calc.:</div>
                        <div class="col-xs-1"><input type="text" id="base_calculo" name="base_calculo" value="0.00"></div>
                        <div class="col-xs-1">Valor Dedução:</div>
                        <div class="col-xs-1"><input type="text" id="valor_deducao" name="valor_deducao" value="0.00"></div>
                    </div>
                </div>

                {#Total Liquido#}
                <div class="col-xs-offset-1 col-xs-10">
                    <div class="row">
                        <div class="col-xs-2 liquid-total">
                            <span>Total líquido</span>
                        </div>
                        <div class="col-xs-2 text-right">
                                <span class="liquid-total" id="valorTotalLiquido">
                                    <input class="liquid-total text-right" type="text" id="valorTotLiq" name="valorTotLiq" value="">
                                </span>
                        </div>
                    </div>
                </div>

                {#FormaPagamento#}
                <div class="table">
                    <div class="row">
                        <div class="col-xs-3 col-xs-offset-1">
                            <label>Forma de Pagamento</label>
                            <select id="formaPagamento" name="formaPagamento" class="col-xs-5">
                                <option value="" selected="selected" class="">&nbsp;</option>
                                <option value="0">À Vista</option>
                                <option value="1">À Prazo</option>
                                <option value="2">Cheque</option>
                            </select>
                        </div>
                    </div>
                </div>


            </div>


            {#Observações#}
            <div class="row">
                <div class="col-xs-10">
                    <div class="col-xs-5 col-xs-offset-1">
                        Observações
                    </div>
                    <div class="col-xs-10 col-xs-offset-1">
                        <textarea class="form-control" name="txtAreaObs" rows="5" id="comment"></textarea>
                    </div>

                </div>
            </div>


            {#Botão Salvar#}
            <div class="row">
                <div class="col-xs-10">
                    <div class="col-xs-7 col-xs-offset-1">
                        <input type="submit" value="Salvar" id="btnSave" name="Salvar">
                    </div>
                </div>
            </div>


            <div class="">
                <div class="row">
                    <div class="row-divider dotted col-xs-10 vertical-offset3 col-xs-offset-1"></div>
                </div>
            </div>
        </div>

    </form>

{% endblock %}

{% block javascripts %}

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>
    <script src="{{ asset('assets/js/sibrax.js') }}"></script>

{% endblock %}