{% extends 'base.html.twig' %}

{% block body %}
    <link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css" media="all">
    <link href="{{ asset('assets/css/nfse_bootstrap.min.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('assets/css/nfse.css') }}" rel="stylesheet" type="text/css"/>

    <h1 class="pagination-centered">Notas</h1>

    <div class="flat-theme">
        <div class="row row-centered">
            <div class="col-xs-1 col-xs-offset-1">

                {#<input type="button" value="Cadastrar Nota" href="{{ path('nota_new') }}">#}
                <a href="{{ path('nota_new') }}"> Nova nota</a>

            </div>
        </div>
        <div class="row row-centered">

        <div class="col-xs-10 col-xs-offset-1">
            <table class="table pagination-centered" style="text-align: center">
                <thead>
                <tr class="table tabelaNota">
                    <th>Id</th>
                    <th>Número NFSe</th>
                    <th>Cliente</th>
                    <th>Data</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th></th>{#Visualizar#}
                    <th></th>{#Imprimir#}
                </tr>
                </thead>
                <tbody>

                {% for notum in notas %}
                    <tr>
                        <td><a href="{{ path('nota_show', { 'id': notum.id }) }}">{{ notum.id }}</a></td>
                        <td>{{ notum.numeroNota }}</td>
                        <td>{{ notum.nome }}</td>
                        <td>{% if notum.data %}{{ notum.data|date('Y-m-d') }}{% endif %}</td>

                        {% if notum.status == 'Enviada' %}
                            <td class="tdNotaEnviada" style="color: #0ccf4d">{{ notum.status }}</td>
                        {% elseif notum.status == 'Não Enviada' %}
                            <td class="tdNotaNEnviada" style="color: #942a25">{{ notum.status }}</td>
                        {% else %}
                            <td class="tdNotaSemStatus" style="color: #cfcd30">Sem Status</td>
                        {% endif %}

                        <td>{{ notum.total|number_format(2, ',', '') }}</td>
                        <td>
                            {% if notum.status == 'Enviada' %}
                                <a href="{{ path('nota_show', { 'id': notum.id }) }}"><span>Visualizar</span></a>
                            {% else %}
                                <a id="reenviarNota" onclick="reenviarNf({{ notum.id }})" href="#"><span>Reenviar Nota</span></a>
                            {% endif %}
                        </td>
                        <td>
                            <a id="reenviarNota" onclick="ImprimirNf({{ notum.id }})" href="#"><span>Imprimir</span></a>
                        </td>

                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>

        </div>


    </div>

{% endblock %}

{% block javascripts %}

    <script src="{{ asset('assets/js/sibrax.js') }}"></script>

{% endblock %}
