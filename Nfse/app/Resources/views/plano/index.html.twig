{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <h1 class="pagination-centered">Plano de Contas</h1>
        </div>
    </div>

    <div class="row padding-top padding-bottom">
        <div class="col-xs-1 col-xs-offset-1">
            <a class="abutton" href="{{ path('plano_new') }}">Novo Plano</a>
        </div>
    </div>

    <div class="row row-centered">
        <div class="col-xs-10 col-xs-offset-1">
            <table class="table pagination-centered">
                <thead>
            <tr>
                <th>Tipo</th>
                <th>Descricao</th>
                <th>Ordem</th>
                <th>Tip</th>
                <th>Contasup</th>
                <th>Nivel</th>
                <th>Natureza</th>
                <th>Orientacoes</th>
                <th>Codigo</th>
                <th>Actions</th>
            </tr>
        </thead>
                <tbody>
        {% for plano in planos %}
            <tr>
                <td><a href="{{ path('plano_show', { 'id': plano.codigo }) }}">{{ plano.tipo }}</a></td>
                <td>{{ plano.descricao }}</td>
                <td>{{ plano.ordem }}</td>
                <td>{{ plano.tip }}</td>
                <td>{{ plano.contaSup }}</td>
                <td>{{ plano.nivel }}</td>
                <td>{{ plano.natureza }}</td>
                <td>{{ plano.orientacoes }}</td>
                <td>{{ plano.codigo }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('plano_show', { 'id': plano.codigo }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('plano_edit', { 'id': plano.codigo }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}
