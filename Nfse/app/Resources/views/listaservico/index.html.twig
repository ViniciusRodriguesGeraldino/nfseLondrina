{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <h1 class="pagination-centered">Lista de Serviços</h1>
        </div>
    </div>

    <div class="row padding-top padding-bottom">
        <div class="col-xs-1 col-xs-offset-1">
            <a class="abutton" href="{{ path('listaservico_new') }}">Novo Serviço</a>
        </div>
    </div>

    <div class="row row-centered">
        <div class="col-xs-10 col-xs-offset-1">
            <table class="table table-bordered pagination-centered">
        <thead>
            <tr>
                <th>Descricao</th>
                <th>Aliquota</th>
                <th>Codigo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for listaservico in listaservicos %}
            <tr>
                <td><a href="{{ path('listaservico_show', { 'id': listaservico.codigo }) }}">{{ listaservico.descricao }}</a></td>
                <td>{{ listaservico.aliquota }}</td>
                <td>{{ listaservico.codigo }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('listaservico_show', { 'id': listaservico.codigo }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('listaservico_edit', { 'id': listaservico.codigo }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    </div>

</div>

{% endblock %}
